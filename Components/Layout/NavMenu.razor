@code
{
    private bool[] buttons = new bool[9];
    private string path = "./buttons.txt";

    protected override async Task OnInitializedAsync()
    {
        readNavFile(path);
    }

    //legge i primi 9 caratteri e verifica se sono il carattere '1'
    public void readNavFile(string path)
    {
        try
        {
            string s = File.ReadAllText(path);

            for (int i = 0; i < buttons.Length; i++)
            {
                if (s[i] == '1')
                {
                    buttons[i] = true;
                }
                else
                {
                    buttons[i] = false;
                }
            }

            foreach (bool b in buttons)
            {
                Console.WriteLine(b);
            }
        }
        catch (Exception e)
        {
            //metto a false tutti i pulsanti per sicurezza
            for (int i = 0; i < buttons.Length; i++)
            {
                buttons[i] = false;
            }

            Console.WriteLine("Errore durante la lettura del file: " + e.Message);
        }
    }
}